<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.kidon.laporan">

    <View
        android:id="@+id/grid3"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/grid1"
        android:background="@color/bg" />

    <View
        android:id="@+id/grid4"
        android:layout_width="600dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/back"
        android:background="@color/bg" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/grid"
        android:layout_marginLeft="135dp"
        android:text="Nur Hidayat"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginLeft="110dp"
        android:layout_toEndOf="@+id/back"
        android:text="66  Tahun"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />
    />

    <View
        android:id="@+id/grid"
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/back1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekam Medis"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textColor="#47525E"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="50dp"
        android:textSize="8pt"
        />
    />

    <View
        android:id="@+id/grid1"
        android:layout_width="310dp"
        android:layout_height="230dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="115dp"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/imageViewTips"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@+id/grid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/rekam" />

    />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KETERANGAN "
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textColor="#47525E"
        android:textStyle="bold"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="125dp"
        android:textSize="8pt"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="18dp"
        android:layout_marginLeft="57dp"
        android:ems="10"
        android:textColor="@color/signupColor"
        android:inputType="textMultiLine"
        android:layout_marginTop="375dp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/editText"
        android:text="Tanggal       : 20 September 2018"
        android:textColor="#47525E"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/editText"
        android:layout_marginTop="25dp"
        android:text="Dokter         : Nur Hidayat"
        android:textColor="#47525E"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/editText"
        android:layout_marginTop="50dp"
        android:text="Rujukan       : CPK"
        android:textColor="#47525E"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/editText"
        android:layout_marginTop="75dp"
        android:text="Nomor         : 190.009.45AB"
        android:textColor="#47525E"
        android:textSize="7pt" />
    />

</RelativeLayout>
