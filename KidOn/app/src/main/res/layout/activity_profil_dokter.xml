<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilDokter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="118dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="40dp"

            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="@string/todo"
            android:src="@drawable/circle_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="209dp"
            android:layout_height="51dp"
            android:layout_marginStart="60dp"
            android:text="@string/nama_dokter"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="13pt"

            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/keahlian"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="9pt"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/favorite" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/favorite" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/favorite" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/favorite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="@color/abu"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jam Praktik"
                android:textAlignment="center"
                android:textColor="@color/signupColor"
                android:textSize="9pt"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senin - Jumat / 09.00 - 17.00"
                android:textAlignment="center"
                android:textColor="@color/signupColor"
                android:textSize="7pt" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tentang Dokter"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="9pt"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Dokter bla bla bla"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="7pt"

                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>